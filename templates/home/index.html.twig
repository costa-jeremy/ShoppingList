{% extends 'base.html.twig' %}

{% block title %}Tableau de bord{% endblock %}

{% block breadcrumb %}
    <nav style="--bs-breadcrumb-divider:'>';font-size:14px">
        <ol class="breadcrumb">
            <li class="breadcrumb-item active">
                <i class="fa-solid fa-house"></i> Tableau de bord
            </li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <h1 class="h2 mb-4">
            <i class="fas fa-chart-line me-2"></i>Tableau de bord
        </h1>

        <div class="row g-4">
            <!-- Colonne des listes de courses -->
            <div class="col-12 col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">
                            <i class="fas fa-shopping-cart me-2"></i>Mes dernières listes de courses
                        </h2>
                        <a href="{{ path('app_shopping_list_index') }}" class="btn btn-light btn-sm">
                            Toutes les listes
                        </a>
                    </div>
                    <div class="card-body">
                        {% if recentShoppingLists|length > 0 %}
                            <div class="list-group">
                                {% for shoppingList in recentShoppingLists %}
                                    <a href="{{ path('app_shopping_list_show', {'id': shoppingList.id}) }}"
                                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="fas fa-list-ul me-2 text-primary"></i>
                                            <strong>{{ shoppingList.name }}</strong>
                                            <br>
                                            <small class="text-muted">
                                                <i class="far fa-calendar me-1"></i>
                                                {{ shoppingList.createdAt|date('d/m/Y') }}
                                            </small>
                                        </div>
                                        <span class="badge bg-primary rounded-pill">
                                            {{ shoppingList.recipes|length }} recette(s)
                                        </span>
                                    </a>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-shopping-cart fa-3x mb-3 opacity-25"></i>
                                <p>Aucune liste de courses pour le moment</p>
                                <a href="{{ path('app_shopping_list_new') }}" class="btn btn-primary">
                                    <i class="fas fa-plus me-2"></i>Créer une liste
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>

            <!-- Colonne des recettes -->
            <div class="col-12 col-lg-6">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0">
                            <i class="fas fa-utensils me-2"></i>Mes dernières recettes
                        </h2>
                        <a href="{{ path('app_recipe_index') }}" class="btn btn-light btn-sm">
                            Toutes les recettes
                        </a>
                    </div>
                    <div class="card-body">
                        {% if recentRecipes|length > 0 %}
                            <div class="list-group">
                                {% for recipe in recentRecipes %}
                                    <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}"
                                       class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                                        <div>
                                            <i class="fas fa-utensils me-2 text-success"></i>
                                            <strong>{{ recipe.name }}</strong>
                                            {% if recipe.comment %}
                                                <br>
                                                <small class="text-muted">{{ recipe.comment|slice(0, 50) }}{% if recipe.comment|length > 50 %}...{% endif %}</small>
                                            {% endif %}
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-success rounded-pill">
                                                {{ recipe.recipeIngredients|length }} ingrédient(s)
                                            </span>
                                            {% if recipe.numberOfTimes > 0 %}
                                                <br>
                                                <small class="text-muted">
                                                    <i class="fas fa-check-circle me-1"></i>{{ recipe.numberOfTimes }}x
                                                </small>
                                            {% endif %}
                                        </div>
                                    </a>
                                {% endfor %}
                            </div>
                        {% else %}
                            <div class="text-center text-muted py-5">
                                <i class="fas fa-utensils fa-3x mb-3 opacity-25"></i>
                                <p>Aucune recette pour le moment</p>
                                <a href="{{ path('app_recipe_new') }}" class="btn btn-success">
                                    <i class="fas fa-plus me-2"></i>Créer une recette
                                </a>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Raccourcis rapides -->
        <div class="row mt-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h3 class="h6 mb-3">
                            <i class="fas fa-bolt me-2"></i>Accès rapides
                        </h3>
                        <div class="d-flex flex-wrap gap-2">
                            <a href="{{ path('app_shopping_list_new') }}" class="btn btn-outline-primary">
                                <i class="fas fa-plus me-2"></i>Nouvelle liste de courses
                            </a>
                            <a href="{{ path('app_recipe_new') }}" class="btn btn-outline-success">
                                <i class="fas fa-plus me-2"></i>Nouvelle recette
                            </a>
                            <a href="{{ path('app_ingredient_new') }}" class="btn btn-outline-info">
                                <i class="fas fa-plus me-2"></i>Nouvel ingrédient
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
