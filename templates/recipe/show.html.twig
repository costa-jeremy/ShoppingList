{% extends 'base.html.twig' %}

{% block title %}Recette {{ recipe.name }} {% endblock %}

{% block body %}
    <h1>Recette {{ recipe.name }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Dernière fois</th>
                <td>{{ recipe.lastTimeDone ? recipe.lastTimeDone|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nombre de fois</th>
                <td>{{ recipe.numberOfTimes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_recipe_index') }}">Revenir à la liste des recettes</a>

    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">Modifier</a>

    {{ include('recipe/_delete_form.html.twig') }}
{% endblock %}
