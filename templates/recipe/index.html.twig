{% extends 'base.html.twig' %}

{% block title %}Mes plats{% endblock %}

 {% block breadcrumb %}
     <nav style="--bs-breadcrumb-divider:'>';font-size:14px">
         <ol class="breadcrumb">
             <li class="breadcrumb-item">
                 <i class="fa-solid fa-house"></i>
             </li>
             <li class="breadcrumb-item">Accuei</li>
             <li class="breadcrumb-item">Mes plats</li>
         </ol>
     </nav>
 {% endblock %}
{% block body %}
    <h1>Mes plats</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Derni√®re fois</th>
                <th>Nombre de fois</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.Name }}</td>
                <td>{{ recipe.lastTimeDone ? recipe.lastTimeDone|date('d/m/Y H:i:s') : '' }}</td>
                <td>{{ recipe.numberOfTimes }}</td>
                <td>
                    <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}">Voir</a>
                    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}">Modifier</a>
                    {{ include('recipe/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucune recette</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_recipe_new') }}">Ajouter une nouvelle recette</a>
{% endblock %}
