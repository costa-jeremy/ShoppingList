{% extends 'base.html.twig' %}

{% block title %}Mes recettes{% endblock %}

{% block breadcrumb %}
    <nav style="--bs-breadcrumb-divider:'>';font-size:14px">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_home') }}" class="text-decoration-none">
                    <i class="fa-solid fa-house"></i>
                </a>
            </li>
            <li class="breadcrumb-item active">Mes recettes</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0">
                <i class="fas fa-utensils me-2"></i>
                Mes recettes
            </h1>
            <a href="{{ path('app_recipe_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>
                <span class="d-none d-sm-inline">Nouvelle recette</span>
                <span class="d-sm-none">Nouvelle <br> recette</span>
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0">
                                <i class="fas fa-book-open me-2 d-none d-md-inline"></i>
                                Nom
                            </th>
                            <th class="border-0 d-none d-lg-table-cell">
                                <i class="fas fa-calendar-alt me-2"></i>
                                Derni√®re pr√©paration
                            </th>
                            <th class="border-0 d-none d-md-table-cell">
                                <i class="fas fa-redo me-2"></i>
                                Nb fois
                            </th>
                            <th class="border-0 text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for recipe in recipes %}
                        <tr>
                            <td class="align-middle">
                                <strong>{{ recipe.name }}</strong>
                                <div class="d-md-none small text-muted mt-1">
                                    {% if recipe.numberOfTimes == 0 %}
                                        <span class="badge bg-secondary">0 fois</span>
                                    {% elseif recipe.numberOfTimes < 5 %}
                                        <span class="badge bg-success">{{ recipe.numberOfTimes }} fois</span>
                                    {% elseif recipe.numberOfTimes < 10 %}
                                        <span class="badge bg-primary">{{ recipe.numberOfTimes }} fois üåü</span>
                                    {% else %}
                                        <span class="badge bg-warning text-dark">{{ recipe.numberOfTimes }} fois üèÜ</span>
                                    {% endif %}
                                    <br>
                                    {% if recipe.lastTimeDone %}
                                        <i class="fas fa-calendar-alt me-1"></i>Derni√®re fois: {{ recipe.lastTimeDone|date('d/m/Y') }}
                                    {% else %}
                                        <i class="fas fa-calendar-alt me-1"></i>Jamais pr√©par√©e
                                    {% endif %}
                                </div>
                            </td>
                            <td class="align-middle d-none d-lg-table-cell">
                                {% if recipe.lastTimeDone %}
                                    <span class="badge bg-info">{{ recipe.lastTimeDone|date('d/m/Y') }}</span>
                                {% else %}
                                    <span class="text-muted small">Jamais</span>
                                {% endif %}
                            </td>
                            <td class="align-middle d-none d-md-table-cell">
                                {% if recipe.numberOfTimes == 0 %}
                                    <span class="badge bg-secondary">0</span>
                                {% elseif recipe.numberOfTimes < 5 %}
                                    <span class="badge bg-success">{{ recipe.numberOfTimes }}</span>
                                {% elseif recipe.numberOfTimes < 10 %}
                                    <span class="badge bg-primary">{{ recipe.numberOfTimes }} üåü</span>
                                {% else %}
                                    <span class="badge bg-warning text-dark">{{ recipe.numberOfTimes }} üèÜ</span>
                                {% endif %}
                            </td>
                            <td class="align-middle">
                                <div class="d-flex gap-2 justify-content-end">
                                    <a href="{{ path('app_recipe_show', {'id': recipe.id}) }}"
                                       class="btn btn-sm btn-info"
                                       title="Voir les d√©tails">
                                        <i class="fas fa-eye me-1"></i>
                                        <span class="d-none d-lg-inline">Voir</span>
                                    </a>
                                    <a href="{{ path('app_recipe_edit', {'id': recipe.id}) }}"
                                       class="btn btn-sm btn-warning"
                                       title="Modifier la recette">
                                        <i class="fas fa-edit me-1"></i>
                                        <span class="d-none d-lg-inline">Modifier</span>
                                    </a>
                                    <form method="post"
                                          action="{{ path('app_recipe_delete', {'id': recipe.id}) }}"
                                          onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette recette ?');"
                                          class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ recipe.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Supprimer la recette">
                                            <i class="fas fa-trash-alt me-1"></i>
                                            <span class="d-none d-lg-inline">Supprimer</span>
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-center py-4 text-muted">
                                <i class="fas fa-book fa-2x mb-3 d-block"></i>
                                Aucune recette
                                <div class="mt-2">
                                    <a href="{{ path('app_recipe_new') }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-plus-circle me-1"></i>
                                        Ajouter ma premi√®re recette
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
