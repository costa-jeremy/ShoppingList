<div class="ingredient-item mb-3 p-3 border rounded">
    <div class="row">
        <div class="col-md-5 mb-2">
            {{ form_row(form.ingredient) }}
        </div>
        <div class="col-md-5 mb-2">
            {{ form_row(form.quantity) }}
        </div>
