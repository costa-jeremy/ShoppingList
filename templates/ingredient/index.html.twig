{% extends 'base.html.twig' %}

{% block title %}Mes ingrédients{% endblock %}

{% block breadcrumb %}
    <nav style="--bs-breadcrumb-divider:'>';font-size:14px">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_home') }}" class="text-decoration-none">
                    <i class="fa-solid fa-house"></i>
                </a>
            </li>
            <li class="breadcrumb-item active">Mes ingrédients</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0">
                <i class="fas fa-pepper-hot me-2"></i>
                Mes ingrédients
            </h1>
            <a href="{{ path('app_ingredient_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>
                Nouvel ingrédient
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0">
                                <i class="fas fa-tag me-2"></i>
                                Nom
                            </th>
                            <th class="border-0">
                                <i class="fas fa-balance-scale me-2"></i>
                                Unité
                            </th>
                            <th class="border-0 text-end" style="width: 200px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for ingredient in ingredients %}
                        <tr>
                            <td class="align-middle">{{ ingredient.name }}</td>
                            <td class="align-middle">{{ ingredient.unit }}</td>
                            <td>
                                <div class="d-flex gap-2 justify-content-end">
                                    <a href="{{ path('app_ingredient_edit', {'id': ingredient.id}) }}"
                                       class="btn btn-sm btn-warning"
                                       title="Modifier l'ingrédient">
                                        <i class="fas fa-edit me-1"></i>
                                        Modifier
                                    </a>
                                    <form method="post"
                                          action="{{ path('app_ingredient_delete', {'id': ingredient.id}) }}"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet ingrédient ? Attention, il sera supprimé de toutes les recettes qui l\'utilisent !');"
                                          class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Supprimer l'ingrédient">
                                            <i class="fas fa-trash-alt me-1"></i>
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center py-4 text-muted">
                                <i class="fas fa-pepper-hot fa-2x mb-3 d-block"></i>
                                Aucun ingrédient
                                <div class="mt-2">
                                    <a href="{{ path('app_ingredient_new') }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-plus-circle me-1"></i>
                                        Ajouter mon premier ingrédient
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
