{% extends 'base.html.twig' %}

{% block title %}Modifier l'ingrédient{% endblock %}

{% block breadcrumb %}
    <nav style="--bs-breadcrumb-divider:'>';font-size:14px">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_home') }}" class="text-decoration-none">
                    <i class="fa-solid fa-house"></i>
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_ingredient_index') }}" class="text-decoration-none">
                    Mes ingrédients
                </a>
            </li>
            <li class="breadcrumb-item active">Modifier {{ ingredient.name }}</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row justify-content-center">
            <div class="col-12 col-md-8">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h1 class="h3 mb-0">
                            <i class="fas fa-edit me-2"></i>
                            Modifier {{ ingredient.name }}
                        </h1>
                    </div>

                    <div class="card-body">
                        {{ include('ingredient/_form.html.twig', {'button_label': 'Enregistrer', 'button_class': 'btn-success'}) }}

                        <div class="mt-3">
                            <div class="row g-2">
                                <div class="col-6">
                                    <a href="{{ path('app_ingredient_index') }}" class="btn btn-secondary btn-lg w-100">
                                        <i class="fas fa-arrow-left me-1"></i>
                                        Retour
                                    </a>
                                </div>
                                <div class="col-6">
                                    <form method="post" action="{{ path('app_ingredient_delete', {'id': ingredient.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet ingrédient ? Attention, il sera supprimé de toutes les recettes qui l\'utilisent !');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ingredient.id) }}">
                                        <button type="submit" class="btn btn-danger btn-lg w-100">
                                            <i class="fas fa-trash-alt me-1"></i>
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
