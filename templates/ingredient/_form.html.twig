{% form_theme form 'bootstrap_5_layout.html.twig' %}

{{ form_start(form) }}
    <div class="row g-3">
        <div class="col-12">
            {{ form_row(form.name) }}
        </div>
        <div class="col-12">
            {{ form_row(form.unit) }}
        </div>
        <div class="col-12">
            <div class="d-grid">
                <button type="submit" class="btn {{ button_class|default('btn-primary') }} btn-lg">
                    <i class="fas fa-save me-1"></i>
                    {{ button_label|default('Enregistrer') }}
                </button>
            </div>
        </div>
    </div>
{{ form_end(form) }}
