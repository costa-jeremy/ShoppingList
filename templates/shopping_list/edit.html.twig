{% extends 'base.html.twig' %}

{% block title %}Modification {{ shopping_list.name ?? 'liste de courses' }}{% endblock %}

{% block breadcrumb %}
    <nav style="--bs-breadcrumb-divider:'>';font-size:14px">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_home') }}" class="text-decoration-none">
                    <i class="fa-solid fa-house"></i>
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_shopping_list_index') }}" class="text-decoration-none">
                    Mes listes de courses
                </a>
            </li>
            <li class="breadcrumb-item active">Modification</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <h1 class="h2 mb-4">
            <i class="fas fa-edit me-2"></i>
            Modifier la liste de courses
        </h1>

        <div class="row">
            <div class="col-12">
                {{ include('shopping_list/_form.html.twig', {'button_label': 'Enregistrer', 'button_class': 'btn-success'}) }}

                <div class="mt-3">
                    <div class="row g-2">
                        <div class="col-6">
                            <a href="{{ path('app_shopping_list_index') }}" class="btn btn-secondary btn-lg w-100">
                                <i class="fas fa-arrow-left me-1"></i>
                                Retour
                            </a>
                        </div>
                        <div class="col-6">
                            <form method="post" action="{{ path('app_shopping_list_delete', {'id': shopping_list.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette liste de courses ?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ shopping_list.id) }}">
                                <button type="submit" class="btn btn-danger btn-lg w-100">
                                    <i class="fas fa-trash-alt me-1"></i>
                                    Supprimer
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
