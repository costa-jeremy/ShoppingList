{% extends 'base.html.twig' %}

{% block title %}Mes listes de courses{% endblock %}

{% block breadcrumb %}
    <nav style="--bs-breadcrumb-divider:'>';font-size:14px">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_home') }}" class="text-decoration-none">
                    <i class="fa-solid fa-house"></i>
                </a>
            </li>
            <li class="breadcrumb-item active">Mes listes de courses</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h2 mb-0">
                <i class="fas fa-shopping-basket me-2"></i>
                Mes listes de courses
            </h1>
            <a href="{{ path('app_shopping_list_new') }}" class="btn btn-primary">
                <i class="fas fa-plus-circle me-2"></i>
                Nouvelle liste
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th class="border-0">
                                <i class="far fa-calendar-alt me-2"></i>
                                Date de création
                            </th>
                            <th class="border-0 text-end" style="width: 280px">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for shopping_list in shopping_lists %}
                        <tr>
                            <td class="align-middle">
                                {{ shopping_list.createdAt ? shopping_list.createdAt|date('d/m/Y à H:i') : '' }}
                            </td>
                            <td>
                                <div class="d-flex gap-2 justify-content-end">
                                    <a href="{{ path('app_shopping_list_show', {'id': shopping_list.id}) }}"
                                       class="btn btn-sm btn-info"
                                       title="Voir les détails">
                                        <i class="fas fa-eye me-1"></i>
                                        Voir
                                    </a>
                                    <a href="{{ path('app_shopping_list_edit', {'id': shopping_list.id}) }}"
                                       class="btn btn-sm btn-warning"
                                       title="Modifier la liste">
                                        <i class="fas fa-edit me-1"></i>
                                        Modifier
                                    </a>
                                    <a href="{{ path('app_shopping_list_download_pdf', {'id': shopping_list.id}) }}"
                                       class="btn btn-sm btn-success"
                                       title="Télécharger en PDF">
                                        <i class="fas fa-file-pdf me-1"></i>
                                        PDF
                                    </a>
                                    <form method="post"
                                          action="{{ path('app_shopping_list_delete', {'id': shopping_list.id}) }}"
                                          onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette liste de courses ?');"
                                          class="d-inline">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ shopping_list.id) }}">
                                        <button type="submit" class="btn btn-sm btn-danger" title="Supprimer la liste">
                                            <i class="fas fa-trash-alt me-1"></i>
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="3" class="text-center py-4 text-muted">
                                <i class="fas fa-inbox fa-2x mb-3 d-block"></i>
                                Aucune liste de courses
                                <div class="mt-2">
                                    <a href="{{ path('app_shopping_list_new') }}" class="btn btn-sm btn-primary">
                                        <i class="fas fa-plus-circle me-1"></i>
                                        Créer ma première liste
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
