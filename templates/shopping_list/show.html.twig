{% extends 'base.html.twig' %}

{% block title %}Détails de la liste de courses{% endblock %}

{% block breadcrumb %}
    <nav style="--bs-breadcrumb-divider:'>';font-size:14px">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">
                <a href="{{ path('app_home') }}" class="text-decoration-none">
                    <i class="fa-solid fa-house"></i>
                </a>
            </li>
            <li class="breadcrumb-item">
                <a href="{{ path('app_shopping_list_index') }}" class="text-decoration-none">
                    Mes listes de courses
                </a>
            </li>
            <li class="breadcrumb-item active">Détails de la liste</li>
        </ol>
    </nav>
{% endblock %}

{% block body %}
    <div class="container-fluid py-4">
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <div class="d-flex justify-content-between align-items-center gap-2">
                            <h1 class="h3 mb-0">
                                <i class="fas fa-clipboard-list me-2"></i>
                                {{ shopping_list.name ?? 'Liste de courses' }}
                            </h1>
                            <a href="{{ path('app_shopping_list_download_pdf', {'id': shopping_list.id}) }}"
                               class="btn btn-light btn-sm">
                                <i class="fas fa-file-pdf me-1"></i>
                                PDF
                            </a>
                        </div>
                    </div>

                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="table-responsive">
                                    <table class="table table-striped mb-0">
                                        <tbody>
                                            {% if shopping_list.name %}
                                            <tr>
                                                <th class="bg-light" style="width: 200px;">
                                                    <i class="fas fa-tag me-2"></i>
                                                    Nom de la liste
                                                </th>
                                                <td>{{ shopping_list.name }}</td>
                                            </tr>
                                            {% endif %}
                                            <tr>
                                                <th class="bg-light" style="width: 200px;">
                                                    <i class="fas fa-calendar-alt me-2"></i>
                                                    Date de création
                                                </th>
                                                <td>{{ shopping_list.createdAt ? shopping_list.createdAt|date('d/m/Y à H:i') : '' }}</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <h4 class="mb-3">
                                    <i class="fas fa-utensils me-2"></i>
                                    Recettes sélectionnées
                                </h4>
                                {% if shopping_list.recipes|length > 0 %}
                                    <div class="row row-cols-1 g-3 mb-4">
                                        {% for recipe in shopping_list.recipes %}
                                            <div class="col">
                                                <div class="card">
                                                    <div class="card-header bg-success text-white">
                                                        <h5 class="mb-0">
                                                            <i class="fas fa-utensils me-2"></i>
                                                            {{ recipe.name }}
                                                        </h5>
                                                    </div>
                                                    <div class="card-body">
                                                        {% if recipe.comment %}
                                                            <div class="alert alert-info mb-3">
                                                                <i class="fas fa-comment me-2"></i>
                                                                <strong>Commentaire :</strong> {{ recipe.comment }}
                                                            </div>
                                                        {% endif %}

                                                        {% if recipe.recipeIngredients|length > 0 %}
                                                            <h6 class="mb-2">
                                                                <i class="fas fa-list me-2"></i>
                                                                Ingrédients :
                                                            </h6>
                                                            <ul class="list-group">
                                                                {% for recipeIngredient in recipe.recipeIngredients %}
                                                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                                                        <span>{{ recipeIngredient.ingredient.name }}</span>
                                                                        <span class="badge bg-primary rounded-pill">
                                                                            {{ recipeIngredient.quantity }} {{ recipeIngredient.ingredient.unit }}
                                                                        </span>
                                                                    </li>
                                                                {% endfor %}
                                                            </ul>
                                                        {% else %}
                                                            <p class="text-muted mb-0">
                                                                <i class="fas fa-exclamation-circle me-2"></i>
                                                                Aucun ingrédient pour cette recette
                                                            </p>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    </div>
                                {% else %}
                                    <div class="alert alert-info">
                                        <i class="fas fa-info-circle me-2"></i>
                                        Aucune recette n'a été sélectionnée pour cette liste
                                    </div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <h4 class="mb-3">
                                    <i class="fas fa-shopping-basket me-2"></i>
                                    Liste de courses complète
                                </h4>
                                {% set totalIngredients = shopping_list.totalIngredients %}
                                {% if totalIngredients|length > 0 or shopping_list.customItems|length > 0 %}
                                    <div class="table-responsive">
                                        <table class="table table-hover table-striped">
                                            <thead class="table-primary">
                                                <tr>
                                                    <th>Ingrédient / Article</th>
                                                    <th>Quantité totale</th>
                                                    <th>Unité</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for item in totalIngredients %}
                                                    <tr>
                                                        <td><strong>{{ item.ingredient.name }}</strong></td>
                                                        <td>{{ item.quantity }}</td>
                                                        <td>{{ item.unit }}</td>
                                                    </tr>
                                                {% endfor %}
                                {% if shopping_list.customItems|length > 0 %}
                                    {% for customItem in shopping_list.customItems %}
                                        <tr class="table-info">
                                            <td><strong>{{ customItem.name }}</strong> <span class="badge bg-info">Article libre</span></td>
                                            <td>{{ customItem.quantity ?? '-' }}</td>
                                            <td>-</td>
                                        </tr>
                                    {% endfor %}
                                {% endif %}
                                            </tbody>
                                        </table>
                                    </div>
                                {% else %}
                                    <div class="alert alert-warning">
                                        <i class="fas fa-exclamation-triangle me-2"></i>
                                        Aucun ingrédient ni article trouvé.
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-light">
                        <div class="d-grid gap-2">
                            <a href="{{ path('app_shopping_list_edit', {'id': shopping_list.id}) }}"
                               class="btn btn-warning btn-lg">
                                <i class="fas fa-edit me-1"></i>
                                Modifier
                            </a>
                            <div class="row g-2">
                                <div class="col-6">
                                    <a href="{{ path('app_shopping_list_index') }}" class="btn btn-secondary btn-lg w-100">
                                        <i class="fas fa-arrow-left me-1"></i>
                                        Retour
                                    </a>
                                </div>
                                <div class="col-6">
                                    <form method="post" action="{{ path('app_shopping_list_delete', {'id': shopping_list.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette liste de courses ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ shopping_list.id) }}">
                                        <button type="submit" class="btn btn-danger btn-lg w-100">
                                            <i class="fas fa-trash-alt me-1"></i>
                                            Supprimer
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
